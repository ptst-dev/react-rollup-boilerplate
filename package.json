{
  "name": "react-rollup-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for building React apps (Rollup.js, TypeScript, SCSS, CSS Modules)",
  "main": "index.js",
  "scripts": {
    "watch": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --environment NODE_ENV:development --watch",
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --environment NODE_ENV:development",
    "build:prod": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --environment NODE_ENV:production",
    "serve": "lite-server --baseDir=dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptst-dev/react-rollup-boilerplate.git"
  },
  "keywords": [
    "react",
    "rollup",
    "boilerplate"
  ],
  "author": "ptst-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ptst-dev/react-rollup-boilerplate/issues"
  },
  "homepage": "https://github.com/ptst-dev/react-rollup-boilerplate#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "generic-names": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lite-server": "^2.6.1",
    "prettier": "^2.7.1",
    "rollup": "^3.3.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "typescript-plugin-css-modules": "^3.4.0"
  }
}
