{
  "env": {
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/eslint-recommended", "eslint-config-react-app"],
  "rules": {
    "@typescript-eslint/no-shadow": 2,
    "@typescript-eslint/no-unused-vars": 0,
    "no-unused-vars": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
